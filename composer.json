{
    "name": "peso/core",
    "type": "library",
    "description": "The core library of the Peso for PHP Framework",
    "keywords": ["currency", "exchange", "conversion"],
    "homepage": "https://phpeso.readthedocs.io/",
    "license": "MIT",
    "authors": [{
        "name": "Anton Smirnov",
        "role": "developer",
        "homepage": "https://sandfox.me/",
        "email": "sandfox+phpeso@sandfox.me"
    }],
    "support": {
        "issues": "https://github.com/phpeso/core/issues",
        "source": "https://github.com/phpeso/core",
        "docs": "https://phpeso.readthedocs.io/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Peso\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Peso\\Core\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.2",
        "arokettu/date": "^2.0",
        "brick/math": ">=0.13 <0.14",
        "psr/http-client": "^1",
        "psr/http-factory": "^1",
        "psr/simple-cache": "^1 || ^2 || ^3"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^3.6",
        "php-http/discovery": "^1.20",
        "php-http/mock-client": "^1.6",
        "phpunit/phpunit": "^12.2",
        "psy/psysh": "^0.12.8",
        "sandfox.dev/code-standard": "^1.2025.05.07",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^6.12"
    },
    "suggest": {
        "ext-bcmath": "For faster arithmetic"
    }
}
